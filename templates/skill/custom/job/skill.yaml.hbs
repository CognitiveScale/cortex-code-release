camel: 1.0.0
name: {{dashCase skillname}}
title: {{skillname}}
description: {{skillname}}
inputs:
  - name: params
    title: Job Input
    parameters:
      - name: params
        type: object
        description: Input Params
        required: true
    routing:
      all:
        action: default-action
        runtime: cortex/jobs
        output: result
outputs:
  - name: result
    title: Job result
    parameters:
      - name: result
        type: object
        description: Job Execution Logs
        required: true
actions:
  - name: default-action
    description: {{skillname}} action 1
    image: {{repo.url}}/{{skillname}}-action
    command: []
    port: "8080"
    type: job
    scaleCount: 1
    environmentVariables: ''
